{% extends 'base.html.twig' %}
{% block body %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default" value="search">Submit</button>
            </form>
        </div>
    </div> 
            <div class="text-center bg-pink"> 
        
        <h1>Listes des Annonces</h1>
    </div>
    <table>
        <thead>
            <tr>
                <div class="row text-center">
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Prix</th>
                    <th>Nbrepiece</th>
                    <th>Photo</th>
                    <th>Description</th>
                    <th>Actions</th>
                </div>
                </tr>
            </thead>
        <tbody>
            {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('admin_annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td><a href="{{ path('admin_annonce_show', { 'id': annonce.id }) }}">{{ annonce.titre }}</a></td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.nbrePiece }}</td>
                <td><img src={{ 'vich_uploader_asset' ('annonce', 'imageFile') }}</td>
                <td>{{ annonce.description }}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('admin_annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <ul>
        <li>
            <a href="{{ path('admin_annonce_new') }}">Create a new annonce</a>
        </li>
    </ul>
</div>
{% endblock %}
